<script class="geolocationtools-config" type="application/json">
  {
    "assetUrl": "{{ "[name]" | asset_url }}",
    "shopId": "{{ shop.id }}",
    "storageKey": "{{ block.settings.storage_key }}"
  }
</script>
<link rel="stylesheet" type="text/css" href="{{ "main.css" | asset_url }}" />
<script src="{{ "main.js" | asset_url }}" async="async"></script>
{% schema %}
  {
    "name": "Geolocation Tools",
    "target": "head",
    "settings": [
      {
        "type": "text",
        "id": "storage_key",
        "label": "Storage Key",
        "info": "The storage key is used for storing data in the browser's localStorage or sessionStorage.",
        "default": "com.geolocationtools"
      }
    ]
  }
{% endschema %}
